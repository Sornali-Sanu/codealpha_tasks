<%- include("layouts/header.ejs") %>
<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
/>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>
<style>
  body {
    font-family: "Arial", sans-serif;
    background-color: #f8f9fa;
  }

  .vegetables_section {
    padding: 40px 0;
  }

  .about_taital {
    font-size: 2.5rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20px;
    color: #343a40; /* Darker heading color */
  }

  .lorem_text {
    color: #6c757d; /* Slightly lighter text */
    text-align: center;
    margin-bottom: 30px;
  }

  .product-card {
    border: none; /* Remove default card border */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
    transition: transform 0.2s; /* Smooth hover effect */
    overflow: hidden; /* Hide overflowing content */
    border-radius: 10px;
    background-color: bisque;
  }
  .product-card:hover {
    transform: translateY(-5px); /* Move up slightly on hover */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .product-card img {
    width: 100%;
    height: 200px; /* Set a fixed height for images */
    object-fit: cover; /* Cover the entire area */
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .card-body {
    padding: 20px;
  }

  .product-price {
    font-size: 1.2rem;
    font-weight: bold;
    color: #28a745; /* Green price */
    margin-bottom: 10px;
  }

  .product-title {
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 15px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .product-description {
    font-size: 0.9rem;
    color: #6c757d;
    margin-bottom: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3; /* Show only 3 lines */
    -webkit-box-orient: vertical;
    height: 50px; /* Set a fixed height for description */
  }

  .add-to-cart-button {
    background-color: #007bff; /* Blue button */
    border-color: #007bff;
    transition: background-color 0.2s;
    border-radius: 5px;
  }

  .add-to-cart-button:hover {
    background-color: #0069d9;
    border-color: #0062cc;
  }
  .vegetables_section_2 .row {
    margin-left: 0;
    margin-right: 0;
  }
  .col {
    padding-left: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
  }
</style>
<main>
  <div class="vegetables_section layout_padding">
    <div class="container">
      <div class="image_2">
        <img src="images/img-2.png" alt="Vegetable Image" />
      </div>
      <h1 class="about_taital">Our Vegetables</h1>
      <p class="lorem_text">
        Explore our fresh and healthy selection of vegetables.
      </p>
      <div class="vegetables_section_2 layout_padding">
        <div class="row">
          <% products.forEach(product => { %>
          <div class="col-md-4 col-lg-3">
            <div class="card product-card">
              <a href="/product/<%= product.id %>">
                <img
                  src="<%= product.image_path %>"
                  class="card-img-top"
                  alt="<%= product.product_title %>"
                />
              </a>
              <div class="card-body">
                <h5 class="product-price"><%= product.product_price %> TK</h5>
                <h4 class="product-title"><%= product.product_title %></h4>
                <p class="product-description">
                  <%= product.product_description %>
                </p>
                <form action="/cart/add" method="POST" class="text-center">
                  <input
                    type="hidden"
                    name="productId"
                    value="<%= product.id %>"
                  />
                  <button
                    type="submit"
                    class="btn btn-primary add-to-cart-button"
                  >
                    Add to Cart
                  </button>
                </form>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<%- include("layouts/footer.ejs") %>
